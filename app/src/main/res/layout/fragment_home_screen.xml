<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5E5E5"
    tools:context=".HomeScreenFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hello"
            android:layout_margin="30dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Hello \nOrlando Diggs."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/photo_icon" />

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_below="@+id/hello"
            android:layout_marginHorizontal="22dp"
            android:background="@drawable/login">

            <TextView
                android:id="@+id/off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="50% off \ntake any courses"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="26dp"
                android:layout_below="@+id/off"
                android:layout_alignStart="@+id/off"
                android:background="@drawable/join"
                android:text="Join Now"
                android:textColor="@color/white" />


        </RelativeLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_alignEnd="@+id/container"
            android:layout_alignBottom="@+id/container"
            android:src="@drawable/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container"
            android:layout_alignStart="@+id/container"
            android:layout_marginTop="10dp"
            android:text="Find Your Job"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/blue"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/job"
            android:layout_alignStart="@+id/job"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue">

            <ImageView
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/head" />

            <TextView
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="44.5k"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sum"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Remote Job"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="165dp"
            android:layout_height="75dp"
            android:layout_alignTop="@id/blue"
            android:layout_alignEnd="@+id/container"
            android:background="@drawable/purple" >

            <TextView
                android:id="@+id/sum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="66.8k"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sum2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Full Time"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="165dp"
            android:layout_height="75dp"
            android:layout_alignBottom="@id/blue"
            android:layout_alignEnd="@+id/container"
            android:background="@drawable/orange" >

            <TextView
                android:id="@+id/sum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="66.8k"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sum3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Full Time"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blue"
            android:layout_alignStart="@+id/container"
            android:layout_marginTop="10dp"
            android:text="Recent Job List"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/JobList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/list"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/joblist" />

    </RelativeLayout>


    
</ScrollView>