<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Create an Account"
        android:textColor="#0D0140"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing \nelit, sed do eiusmod tempor"
        android:textAlignment="center"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/email"
        android:layout_marginLeft="25dp"
       android:layout_below="@+id/name_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:hint="Brandonelouis@gmail.com "
        android:paddingHorizontal="16dp"
        android:textColorHint="#600D0140" />

    <TextView
        android:id="@+id/password"
        android:layout_below="@+id/edt_email"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_pswrd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:background="@drawable/shape"
        android:hint="***********"
        android:textColorHint="#600D0140" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/edt_pswrd"
        android:layout_alignRight="@+id/edt_pswrd"
        android:layout_alignBottom="@+id/edt_pswrd"
        android:background="@drawable/shape"
        android:paddingRight="10dp"
        android:src="@drawable/ic_icon_eye" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/edt_pswrd"
        android:layout_below="@id/edt_pswrd"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_checkbox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/checkbox"
        android:layout_alignBottom="@id/checkbox"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/checkbox"
        android:paddingVertical="3dp"
        android:text="Remember me"
        android:textColor="#AAA6B9"
        android:textSize="12sp" />


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/checkbox"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login"
        android:text="Sign up"
        android:textColor="@color/white" />

    <Button
        android:paddingHorizontal="40dp"
        android:drawableStart="@drawable/google_icon"
        android:id="@+id/with"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_checkbox"
        android:text="Sign in with Google"
        android:textColor="@color/black" />

    <LinearLayout

        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#524B6B"
            android:text="You don't have an account yet?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="Sign in"
            android:textColor="#E66938"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:text="Full name"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name_full"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:hint="Brandone Louis  "
        android:paddingHorizontal="16dp"
        android:textColorHint="#600D0140" />






</RelativeLayout>