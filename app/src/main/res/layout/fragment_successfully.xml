<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Successfully"
        android:textColor="#0D0140"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing \nelit, sed do eiusmod tempor"
        android:textAlignment="center"
        android:textStyle="bold" />


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/check"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/login"
        android:text="Continue"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/with"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_checkbox"
        android:text="Back to Login"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/successfully" />


</RelativeLayout>