<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/relative"
    android:layout_marginVertical="10dp"
    android:background="@drawable/shape"
    android:layout_marginStart="16dp"
    android:layout_height="263dp">

<TextView
    android:id="@+id/nameOfJob"
    android:layout_marginTop="70dp"
    android:layout_marginStart="20dp"
    android:textSize="14sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:text="UI/UX Designer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nameOfCompany"
        android:textColor="@color/black"
        android:layout_marginTop="92dp"
        android:layout_marginStart="20dp"
        android:text="Google inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="154dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/position"
            android:layout_marginStart="20dp"
            android:paddingEnd="21dp"
            android:paddingStart="21dp"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:backgroundTint="#ECEFF3"
            android:text="Design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/time"
            android:layout_marginHorizontal="10dp"
            android:paddingEnd="21dp"
            android:paddingStart="21dp"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:backgroundTint="#ECEFF3"
            android:text="Full time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/level"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:backgroundTint="#ECEFF3"
            android:text="Senior Designer"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="222dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/time_load"
        android:layout_marginStart="20dp"
        android:text="25 minutes ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/salary"
        android:layout_marginStart="173dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="$20k /Mo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="22dp"
        android:layout_marginStart="22dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/google_icon" />

    <ImageView
        android:layout_marginTop="23dp"
        android:layout_marginStart="296dp"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/save"/>
</RelativeLayout>